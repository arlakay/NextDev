<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#DDDDDD">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROADSHOW"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_one"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_one"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sosialisasi Kompetisi The NextDev di 20 Kota."
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOTCAMP"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_two"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_two"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top 20 Finalis mempelajari berbagai hal baik dari segi desain, teknis, dan bisnis untuk dapat mengembangkan aplikasinya selama 3 hari di Jakarta. "
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PITCHING"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_three"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_three"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pitching selama 3 menit untuk setiap finalis di depan para juri dan undangan."
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVESTOR MEETUP"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_four"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_four"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finalis bertemu dengan para investor untuk pengembangan aplikasi."
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AWARDING"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_five"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_five"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seremonial pemberian hadiah kepada pemenang dan sesi foto."
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txt_timeline_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MANAGEMENT TRIP"
                    android:textAllCaps="true"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

                <ImageView
                    android:id="@+id/img_timeline_six"
                    android:layout_width="192dp"
                    android:layout_height="192dp"
                    android:background="@drawable/timeline_six"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/txt_timeline_snippet_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perjalanan pemenang ke destinasi yang telah ditentukan"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
